const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  headline: 'What Is RAG? Retrieval-Augmented Generation Explained',
  datePublished: '2026-02-27',
  author: { '@type': 'Organization', name: 'The AI Resource Hub' },
  description: 'A plain-English guide to RAG — the technique that lets AI models pull in real data instead of guessing.',
