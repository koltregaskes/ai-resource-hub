---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ModelComparisonTable from '../../components/ModelComparisonTable';
import { getModelsByCategory } from '../../db/queries';

const models = getModelsByCategory('video');
const rawBase = import.meta.env.BASE_URL;
const base = rawBase.endsWith('/') ? rawBase : `${rawBase}/`;
const lastUpdated = new Date().toLocaleDateString('en-GB', {
  day: 'numeric',
  month: 'short',
  year: 'numeric',
});

function formatPrice(v: unknown): string {
  const price = v as number;
  if (price === 0) return 'Free';
  return `$${price.toFixed(2)}`;
}

function formatDuration(v: unknown): string {
  return `${v}s`;
}

function formatGenTime(v: unknown): string {
  return `${v}s`;
}

const columns = [
  { field: 'name' as const, label: 'Model', shortLabel: 'Model', format: (v: unknown) => String(v), align: 'left' as const, defaultSort: 'asc' as const },
  { field: 'provider' as const, label: 'Provider', shortLabel: 'Provider', format: (v: unknown) => String(v), align: 'left' as const, defaultSort: 'asc' as const },
  { field: 'inputPrice' as const, label: 'Cost / Second', shortLabel: '$/sec', format: formatPrice, align: 'right' as const, defaultSort: 'asc' as const },
  { field: 'maxOutput' as const, label: 'Max Duration', shortLabel: 'Max Dur.', format: formatDuration, align: 'right' as const, defaultSort: 'desc' as const },
  { field: 'speed' as const, label: 'Gen Time', shortLabel: 'Gen Time', format: formatGenTime, align: 'right' as const, defaultSort: 'asc' as const },
  { field: 'qualityScore' as const, label: 'Quality', shortLabel: 'Qual.', format: (v: unknown) => String(v), align: 'right' as const, defaultSort: 'desc' as const },
];

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'Dataset',
  name: 'AI Video Generation Model Comparison',
  description: 'Independent comparison of AI video generation models — Sora, Veo, Runway Gen-4, Kling, and more.',
  url: new URL(`${base}compare/video`, Astro.site).toString(),
};
---

<BaseLayout
  title="Video Model Comparison — The AI Resource Hub"
  description="Compare AI video generation models by price, quality, duration, and speed. Sora, Veo 3, Runway Gen-4, Kling 2, Pika, and more."
>
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
    <div class="mb-8">
      <nav class="text-xs text-(--color-text-muted) mb-4" aria-label="Breadcrumb">
        <a href={base} class="hover:text-(--color-text-secondary) transition-colors">Home</a>
        <span class="mx-2">/</span>
        <span class="text-(--color-text-secondary)">Video Models</span>
      </nav>

      <h1 class="text-3xl sm:text-4xl font-extrabold text-(--color-text-primary) mb-3">
        AI Video Generation Models
      </h1>
      <p class="text-(--color-text-secondary) max-w-2xl">
        Compare {models.length} video generation models across pricing, max duration, generation speed,
        and quality. Click any column header to sort.
      </p>
      <p class="text-xs text-(--color-text-muted) mt-2">
        Last updated: {lastUpdated} &middot; Prices per second of generated video
      </p>
    </div>

    <ModelComparisonTable
      client:load
      models={models}
      columns={columns}
      category="video"
      baseUrl={base}
      priceLabel="Cost per second of video (USD)"
      priceUnit="standard quality"
    />
  </section>

  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
</BaseLayout>
