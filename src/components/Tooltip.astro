---
/**
 * Tooltip component â€” shows an info icon that reveals a plain-English explanation on hover.
 * Used throughout the site to explain technical terms inline.
 *
 * Usage:
 *   <Tooltip term="MMLU" tip="A 57-subject multiple choice test for general knowledge." />
 *   <Tooltip term="Context Window" tip="How much text a model can read at once." />
 */
interface Props {
  term?: string;
  tip: string;
}

const { term, tip } = Astro.props;
---

<span class="tooltip-wrapper">
  {term && <span class="text-(--color-text-primary) font-medium">{term}</span>}
  <span class="tooltip-trigger" tabindex="0" role="button" aria-label={`Info: ${tip}`}>
    <svg class="w-3.5 h-3.5 inline-block ml-0.5 -mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <circle cx="12" cy="12" r="10" />
      <path d="M12 16v-4M12 8h.01" />
    </svg>
    <span class="tooltip-content">{tip}</span>
  </span>
</span>

<style>
  .tooltip-wrapper {
    display: inline;
  }

  .tooltip-trigger {
    position: relative;
    display: inline-block;
    cursor: help;
    color: var(--color-text-muted);
    transition: color 0.15s;
  }

  .tooltip-trigger:hover,
  .tooltip-trigger:focus {
    color: var(--color-accent);
  }

  .tooltip-content {
    position: absolute;
    bottom: calc(100% + 8px);
    left: 50%;
    transform: translateX(-50%);
    min-width: 200px;
    max-width: 320px;
    padding: 8px 12px;
    border-radius: 8px;
    font-size: 0.8125rem;
    line-height: 1.5;
    font-weight: 400;
    color: var(--color-text-secondary);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transition: opacity 0.15s, visibility 0.15s;
    z-index: 50;
    white-space: normal;
  }

  .tooltip-content::after {
    content: '';
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    border: 5px solid transparent;
    border-top-color: var(--color-border);
  }

  .tooltip-trigger:hover .tooltip-content,
  .tooltip-trigger:focus .tooltip-content {
    opacity: 1;
    visibility: visible;
  }
</style>
